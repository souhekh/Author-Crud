{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1 class="mb-4">Author</h1>

    <div class="row">
        <div class="col-md-4">
            {% if author.picture %}
                <img src="{{ asset('uploads/author_pictures/' ~ author.picture) }}" alt="{{ author.username }}" class="img-fluid mb-3">
            {% else %}
                <p>No picture available</p>
            {% endif %}
        </div>
        <div class="col-md-8">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ author.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ author.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ author.email }}</td>
                    </tr>
                    <tr>
                        <th>NbBooks</th>
                        <td>{{ author.nbBooks }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app_author_index') }}" class="btn btn-secondary">back to list</a>
    <a href="{{ path('app_author_edit', {'id': author.id}) }}" class="btn btn-primary">edit</a>
    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
